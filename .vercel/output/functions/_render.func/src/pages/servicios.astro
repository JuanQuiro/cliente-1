<MainLayout title={pageTitle} description={pageDescription}>
  <BaseHead title={pageTitle} description={pageDescription} image={heroBg} slot="head" />
  <script type="application/ld+json" slot="head">{JSON.stringify({
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    "name": "Jonathan Roofing & Landscaping",
    "image": "https://jonathanroofing.com/logo.png",
    "@id": "https://jonathanroofing.com/",
    "url": "https://jonathanroofing.com/servicios",
    "telephone": "+1 787-123-4567",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Barranquitas",
      "addressLocality": "Barranquitas",
      "addressRegion": "PR",
      "postalCode": "00794",
      "addressCountry": "PR"
    },
    "description": "Servicios de mantenimiento, techado, impermeabilización y áreas verdes en Puerto Rico. 10 años de experiencia.",
    "areaServed": "Puerto Rico",
    "openingHours": "Mo-Sa 08:00-18:00",
    "priceRange": "$",
    "makesOffer": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Impermeabilización de Techos",
          "description": "Limpieza profunda y sellado profesional de techos."
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Corte de Grama y Jardinería",
          "description": "Mantenimiento y embellecimiento de áreas verdes."
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "SISTEMAS DE AGUA",
          "description": "Reconstruimos la integridad de su techos y sistemas de drenaje con técnicas probadas que incluye: Sellado profesional de goteras y grietas con materiales Eterna/Marin Membrana, Zabaleta, Reparación de canalones (evita inundaciones en paredes), Minimización de emposamientos con nivelación precisa, Destape de desagües obstruidos (métodos manuales y mecánicos)"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Handyman (Reparaciones y Obras Menores)",
          "description": "Soluciones rápidas y prácticas para mantener tu propiedad en óptimas condiciones."
        }
      }
    ]
  }, null, 2)}</script>
  <!-- Hero -->
  <section aria-label="Hero: Servicios" class="relative isolate overflow-hidden h-[80vh] flex items-center justify-center text-center text-white">
    <img src={heroBg.src} alt="Servicios" class="absolute inset-0 -z-10 h-full w-full object-cover" />
